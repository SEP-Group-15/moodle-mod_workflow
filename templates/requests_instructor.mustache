{{!
    @template local_workflow/requests_lecturer
    This template renders the search form within forums.
    Example context (json):
    {
    }
}}

<div>
<h4>{{workflow}}{{#activityrelated}} - {{activity}}{{/activityrelated}}</h4>
<p>{{description}}</p>
<table class="table discussion-list">
    {{^norequests}}
    <thead>
        <tr>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">ID</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Request</a>
            </th>
            {{#general}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Activity</a>
            </th>
            {{/general}}
            {{#activityrelated}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Type</a>
            </th>
            {{/activityrelated}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Student</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Individual/Batch</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Status</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Time Created</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Feedback</a>
            </th>
        </tr>
    </thead>
    {{/norequests}}
    <tbody>
        {{#requests}}
            <tr>
                <td class="p-0 align-middle fit-content">
                    {{id}}
                </td>    
                <th scope="row" class="topic p-0 align-middle">
                    <div class="p-3 p-l-0">
                        <a class="w-100 h-100 d-block" href="{{url}}{{id}}&cmid={{cmid}}" title="Request 1" aria-label="Request 1">
                           {{request}}
                        </a>
                    </div>
                </th>
                {{#general}}
                <td class="p-0 align-middle fit-content">
                {{activity}}
                </td>
                {{/general}}
                {{#activityrelated}}
                <td class="p-0 align-middle fit-content">
                {{type}}
                </td>
                {{/activityrelated}}
                <td class="p-0 align-middle fit-content">
                    {{student}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{#isbatchrequest}}
                        Batch
                    {{/isbatchrequest}}
                    {{^isbatchrequest}}
                        Individual
                    {{/isbatchrequest}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{status}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{timecreated}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{instructorcomment}}
                </td>
            </tr>
            {{/requests}}
    </tbody>
</table>

{{#norequests}}
<p>No requests.</p>
{{/norequests}}
</div>
